<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="theme_splash_activity_style" parent="AppTheme.NoActionBar" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
    </style>

    <style name="theme_activity_style_explore" parent="AppTheme" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="actionBarStyle">@style/ActionBarStyleExplore</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyleExplore</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="theme_activity_style_filter" parent="AppTheme" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="actionBarStyle">@style/ActionBarStyleFilter</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyleFilter</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="theme_activity_style_entitydetails" parent="AppTheme" tools:targetApi="21">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="actionBarStyle">@style/ActionBarStyleFilter</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyleEntityDetails</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ActionBarStyleExplore" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showCustom</item>

        <item name="customNavigationLayout">@layout/action_bar_explore</item>
        <item name="android:customNavigationLayout" tools:ignore="NewApi">@layout/action_bar_explore</item>

        <item name="background">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="ActionBarStyleFilter" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showCustom</item>

        <item name="customNavigationLayout">@layout/action_bar_filter</item>
        <item name="android:customNavigationLayout" tools:ignore="NewApi">@layout/action_bar_filter</item>

        <item name="background">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="ActionBarStyleEntityDetails" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showCustom</item>

        <item name="customNavigationLayout">@layout/action_bar_filter</item>
        <item name="android:customNavigationLayout" tools:ignore="NewApi">@layout/action_bar_entitydetails</item>

        <item name="background">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
